{
  "Digitale GPIO Sensoren": {
    "DHT11/DHT22": {
      "plattform": "dht",
      "werte": [ "Temperatur", "Luftfeuchtigkeit" ],
      "required": [ "pin", "Tempname", "HumidityName" ],
      "optional": [ "update_interval", "model" ]
    },
    "DS18B20": {
      "plattform": "dallas_temp",
      "werte": [ "Temperatur" ],
      "required": [ "address" ],
      "optional": [ "pin", "update_interval", "name" ]
    },
    "HC-SR04": {
      "plattform": "ultrasonic",
      "werte": [ "Abstand" ],
      "required": [ "trigger_pin", "echo_pin" ],
      "optional": [ "name", "timeout", "update_interval", "pulse_time", "id" ]
    }
  },
  "I2C Sensoren": {
    "BMP280": {
      "plattform": "bmp280_i2c",
      "werte": [ "Temperatur", "Luftdruck" ],
      "required": [ "address" ],
      "optional": [ "Tempname", "TempOversampling","PressureName","PressureOversampling","update_interval",],
      "info": ["I2C Bus notwendig"]
    },
    "BME280": {
      "plattform": "bme280_i2c",
      "werte": [ "Temperatur", "Luftfeuchtigkeit", "Luftdruck" ],
      "required": [ "address" ],
      "optional": [ "update_interval","Tempname", "PressureName", "HumidityName" ],
      "info": [ "I2C Bus notwendig" ]
    },
    "BH1750": {
      "plattform": "bh1750",
      "werte": [ "Helligkeit (Lux)" ],
      "required": ["address"],
      "optional": [ "name", "update_interval" ],
      "info": [ "I2C Bus notwendig" ]
    },
    "SHT3X-D": {
      "plattform": "sht3xd",
      "werte": [ "Temperatur", "Luftfeuchtigkeit" ],
      "required": ["address"],
      "optional": [ "Tempname", "HumidityName", "update_interval" ],
      "info": [ "I2C Bus notwendig" ]
    },
    "INA219": {
      "plattform": "ina219",
      "werte": [ "Spannung", "Strom", "Leistung" ],
      "required": ["address"],
      "optional": [ "shunt_resistance","currentname","powername","bus_voltage_name", "shunt_voltage_name" ,"max_voltage","max_current", "update_interval" ],
      "info": [ "I2C Bus notwendig" ]
    }
  },
  "SPI Sensoren": {
    "MAX6675": {
      "plattform": "max6675",
      "werte": [ "Temperatur (K-Typ)" ],
      "required": [ "cs_pin" ],
      "optional": [ "name", "update_interval" ],
      "info": [ "SPI Bus notwendig" ]
    },
    "MAX31855": {
      "plattform": "max31855",
      "werte": [ "Temperatur (K-Typ, genau)" ],
      "required": [ "cs_pin" ],
      "optional": [ "name", "update_interval" ],
      "info": [ "SPI Bus notwendig" ]
    }
  },
  "Interne Sensoren": {
    "wifi_signal": {
      "plattform": "wifi_signal",
      "werte": [ "Signalst�rke" ],
      "required": [],
      "optional": ["name", "update_interval" ]
    },
    "uptime": {
      "plattform": "uptime",
      "werte": [ "Sekunden" ],
      "required": [],
      "optional": ["name", "update_interval" ]
    },
    "internal_temperature": {
      "plattform": "internal_temperature",
      "werte": [ "CPU-Temperatur" ],
      "required": [],
      "optional": [ "name", "update_interval" ]
    }
  },
  
    "Analoge Sensoren / ADC": {
      "ADC": {
        "plattform": "adc",
        "werte": [ "Spannung (Analogpin)" ],
        "required": [ "pin" ],
        "optional": [ "attenuation", "name", "update_interval", "filters" ],
        "ui_fields": {
          "pin": {
            "type": "ComboBox",
            "values": [ "A0", "GPIO32", "GPIO33", "GPIO34" ]
          },
          "attenuation": {
            "type": "ComboBox",
            "values": [ "0db", "2.5db", "6db", "11db" ]
          },
          "name": { "type": "TextBox" },
          "update_interval": {
            "type": "NumericUpDown",
            "min": 1,
            "max": 3600,
            "step": 1
          },
          "filters": { "type": "TextBox" }
        }
      },
      "pulse_counter": {
        "plattform": "pulse_counter",
        "werte": [ "Impulse/Zählung" ],
        "required": [ "pin" ],
        "optional": [ "name", "internal_filter", "unit_of_measurement", "count_mode", "update_interval", "accuracy_decimals", "id" ],
        "ui_fields": {
          "pin": {
            "type": "ComboBox",
            "values": [ "GPIO12", "GPIO13", "GPIO14", "GPIO27" ]
          },
          "name": { "type": "TextBox" },
          "internal_filter": {
            "type": "NumericUpDown",
            "min": 0,
            "max": 1000,
            "step": 1
          },
          "unit_of_measurement": {
            "type": "ComboBox",
            "values": [ "l/min", "rpm", "Hz", "imp/min" ]
          },
          "count_mode": {
            "type": "ComboBox",
            "values": [ "rising_edge", "falling_edge", "both" ]
          },
          "update_interval": {
            "type": "NumericUpDown",
            "min": 1,
            "max": 3600,
            "step": 1
          },
          "accuracy_decimals": {
            "type": "NumericUpDown",
            "min": 0,
            "max": 5,
            "step": 1
          },
          "id": { "type": "TextBox" }
        }
      }
    },
    "Virtuelle / Software Sensoren": {
      "template": {
        "plattform": "template",
        "werte": [ "Benutzerdefiniert" ],
        "required": [ "name", "lambda" ],
        "optional": [ "filters", "unit_of_measurement", "update_interval", "accuracy_decimals" ],
        "ui_fields": {
          "name": { "type": "TextBox" },
          "lambda": {
            "type": "TextBox",
            "multiline": true
          },
          "filters": { "type": "TextBox" },
          "unit_of_measurement": {
            "type": "ComboBox",
            "values": [ "°C", "V", "A", "rpm", "l/min" ]
          },
          "update_interval": {
            "type": "NumericUpDown",
            "min": 1,
            "max": 3600,
            "step": 1
          },
          "accuracy_decimals": {
            "type": "NumericUpDown",
            "min": 0,
            "max": 5,
            "step": 1
          }
        }
      },
      "integration": {
        "plattform": "integration",
        "werte": [ "Fläche (z.B. Energie aus Leistung)" ],
        "required": [ "sensor" ],
        "optional": [ "time_unit", "name", "unit_of_measurement", "accuracy_decimals", "id" ],
        "ui_fields": {
          "sensor": { "type": "TextBox" },
          "time_unit": {
            "type": "ComboBox",
            "values": [ "s", "min", "h" ]
          },
          "name": { "type": "TextBox" },
          "unit_of_measurement": {
            "type": "ComboBox",
            "values": [ "Wh", "Ah", "l", "m³" ]
          },
          "accuracy_decimals": {
            "type": "NumericUpDown",
            "min": 0,
            "max": 5,
            "step": 1
          },
          "id": { "type": "TextBox" }
        }
      }
    }
  }

